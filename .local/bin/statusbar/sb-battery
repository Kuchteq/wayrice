#!/bin/sh

for battery in /sys/class/power_supply/BAT?*; do
	# If non-first battery, print a space separator.
	[ -n "${capacity+x}" ] && printf " "
        last_critical_path="$XDG_RUNTIME_DIR/last-battery-notif"
	# Sets up the status and capacity
	case "$(cat "$battery/status" 2>&1)" in
		"Full") fin="ó±Š¦ " ;;
		"Discharging") status="d" ;;
		"Charging") fin="ðŸ”Œ "; [ -f $last_critical_path ] && rm "$last_critical_path" ;;
		"Not charging") fin="ó° " ;;
		"Unknown") fin="ó°‚‘ " ;;
		*) exit 1 ;;
	esac
	capacity="$(cat "$battery/capacity" 2>&1)"
	# Will make a warn variable if discharging and low
	[ "$status" = "d" ] && fin="ï‰€  "
	[ "$status" = "d" ] && [ "$capacity" -le 75 ] && fin="ï‰  "
	[ "$status" = "d" ] && [ "$capacity" -le 50 ] && fin="ï‰‚  "
	[ "$status" = "d" ] && [ "$capacity" -le 33 ] && fin="ï‰ƒ  "
	[ "$status" = "d" ] && [ "$capacity" -le 12 ] && warn="â— "
        
        if [ "$status" = "d" ] && [ "$capacity" -le 5 ]; then
                [ -f $last_critical_path ] && previous=$(cat $last_critical_path) || previous=-1
                case $capacity in
                        5|2|1|-1)
                                if [ "$previous" -ne "$capacity" ]; then
                                        echo -n "ó±ƒ battery low at $capacity%" | cooltify &
                                        echo -n "$capacity" > $last_critical_path
                                fi
                                ;;
                esac
        fi

        power=""
        if command -v cpupower >/dev/null; then
                cpupolicy="$(cpupower frequency-info -p | grep -o "powersave\|performance")"
                [ "$cpupolicy" = "performance" ] && power="ó±€š "
        fi
	# Prints the info
	printf "%s%s%s%d%%"  "$power" "$fin" "$warn" "$capacity"; unset warn
done && printf "\\n"
