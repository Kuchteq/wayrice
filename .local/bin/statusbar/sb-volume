#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.
vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)" 
if [ $? != 0 ] || [ -z "$vol" ]; then  
    if ! pgrep -f 'sleep 2 && pkill -44 someblocks' >/dev/null 2>&1; then
        setsid -f sh -c "sleep 2 && pkill -44 someblocks" >/dev/null 2>&1; 
    fi
    echo "!ðŸ”‡"
exit; 
fi

# If muted, print ðŸ”‡ and exit.
[ "$vol" != "${vol%\[MUTED\]}" ] && echo ðŸ”‡ && exit

vol="${vol#Volume: }"
split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}
vol="$(split "$vol" ".")"
vol="${vol##0}"

case 1 in
	$((vol >= 70)) ) icon="ðŸ”Š" ;;
	$((vol >= 30)) ) icon="ðŸ”‰" ;;
	$((vol >= 1)) ) icon="ðŸ”ˆ" ;;
	* ) icon=ðŸ”‡ ;;
esac

echo "$icon $vol%"
