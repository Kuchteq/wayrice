#!/bin/zsh
text="i - Note \\nw - Word lookup \\ne - translate\\nh - Htop\\nb - Bluetooth\\nt - Tmux\\nn - WiFi"
width=$(($(echo -e $text | wc -m) * 16))
selected=${$(printf $text | tofi  --width "$width" -c "$XDG_CONFIG_HOME/tofi/quickact.ini"):0:1}
#caje "$selected"
DATE=$(date +%Y-%m-%dT%H:%M:%S)

case "$selected" in
     i) $TERMINAL -o "main.pad=20x20 center" -a "floatermid" -T "Float Note on $DATE" -W "60x14" primvi -c 'startinsert' ;;
     w) linguee ;;
     h) $TERMINAL htop ;;
     t) $TERMINAL tmux a ;;
     b) $TERMINAL -a "floateright" -W "60x20" bluetuith ;;
     n) iwdbemenu
esac
#so times 16 it's the width
