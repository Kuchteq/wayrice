#!/bin/zsh
text="i - Note \\ne - translate\\nh - Htop\\nb - Bluetooth\\nt - Tmux\\nn - WiFi\\ns - Server Term \\nc - Server Files \\nm - Man \\nq - QR View"
width=$(($(echo -e $text | wc -m) * 15))
selected=${$(printf $text | tofi --auto-accept-single=true  --matching-algorithm=prefix --prompt-text "Quick: " --width "$width" -c "$XDG_CONFIG_HOME/tofi/topPrompt.ini"):0:1}
#caje "$selected"
DATE=$(date +%Y-%m-%dT%H:%M:%S)

case "$selected" in
     i) $TERMINAL -o "main.pad=20x20 center" -a "floatermid" -T "Float Note on $DATE" -W "60x14" primvi -c 'startinsert' ;;
     w) linguee ;;
     h) $TERMINAL htop ;;
     t) $TERMINAL tmux a ;;
     b) $TERMINAL -a "floateright" -T "Bluetuith" -W "60x20" bluetuith ;;
     e) $TERMINAL -T "Translate" -a "floateright" -W "60x20" trans -v -I ;;
     s) serverterm ;;
     m) bman ;;
     c) serverfilesterm ;;
     n) iwdbemenu ;;
     q) qrshare -c 
esac
#so times 16 it's the width
