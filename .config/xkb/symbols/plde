// PLDESI LAYOUT by Mariusz Kuchta, MORE SHORTCUTS THANKS TO SLAVIC LETTERS
// For regular keyboards, this is meant to be used with a corresponding keyd config
// For QMK firmware based keyboard, compile and use the based_layout/keymap.c
// 
// ┌────┐
// │ 2 4│   2 = Shift,  4 = AltGr + Shift
// │ 1 3│   1 = Normal, 3 = AltGr
// └────┘

//                                             BASE LAYER
//
// ┌─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┐
// │ esc │ F1  │ F2  │ F3  │ F4  │ F5  │ F6  │ F7  │ F8  │ F9  │ F10 │ F11 │ F12 │ PRSC│ DEL │ INS │
// │     │ 🔇  │ 🔉  │ 🔊  │  󰌶  │ 󱩖   │    │  󱩖 │     │     │     │     │     │     │     │     │
// ┢─────┼─────┼─────┼─────┼─────┼─────┼─────┼─────┼─────┼─────┼─────┼─────┼─────╆━━━━━┷━━━━━╅─────┤
// ┃ ~ ∨ │ ! ' │ @ " │ # ˝ │ $ ¸ │ % ˇ │ ^ ^ │ & ˘ │ * ˙ │ ( ̣  │ ) ° │ _ ¯ │ + ˛ ┃  ⌫ Back   ┃     │
// ┃ ` ¬ │ 1 ¡ │ 2 © │ 3 • │ 4 § │ 5 € │ 6 ¢ │ 7 − │ 8 × │ 9 ÷ │ 0 ° │ - – │ = — ┃   space   ┃ PGUP│
// ┣━━━━━┷━┱───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┺━┳━━━━━━━━━╉─────┤
// ┃       ┃ Q Ą │ W Š │ E Ę │ R © │ T Ω │ Y ¥ │ U ↑ │ I ↔ │ O Ó │ P Þ │ { Ü │ } Ö ┃   ? ρ   ┃     │
// ┃Tab ↹  ┃ q ą │ w š │ e ę │ r ® │ t π │ y ← │ u ↓ │ i → │ o ó │ p þ │ [ ü │ ] ö ┃   / |   ┃ PGDN│
// ┣━━━━━━━┻┱────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┲━━━━┻━━━━━━━━━╉─────┤
// ┃Tap ESC ┃ A Ä │ S ß │ D ś │ F Ž │ G Č │ H • │ J Ə │ K / │ L Ł │ : ˝ │ " ˇ ┃   Enter      ┃     │
// ┃Ctrl ⇬  ┃ a ä │ s ß │ d Ś │ f ž │ g č │ h ’ │ j ə │ k … │ l ł │ ; ´ │ ' ^ ┃     ⏎        ┃ HOME│
// ┣━━━━━━━━┻━━━━┱┴────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┲┻━━━━━━━━┳━━━━━╃─────┤
// ┃             ┃ Z Ż │ X Ź │ C Ć │ V ‘ │ B “ │ N Ń │ M ∞ │ < × │ > ÷ │ |   ┃         ┃     │     │
// ┃Shift ⇧      ┃ z ż │ x ź │ c ć │ v „ │ b ” │ n ń │ m µ │ , ≤ │ . ≥ │ \ ρ ┃Shift ⇧  ┃  ↑  │ END │
// ┣━━━━━━━┳━━━━━┻━┳━━━┷━━━┱─┴─────┴─────┴─────┴─────┴─────┴───┲━┷━━━┳━┷━━━┳━┻━━━┳━━━━━╃─────┼─────┤
// ┃ SWITCH┃       ┃       ┃ ␣                               ⍽ ┃⇮    ┃     ┃     ┃     │     │     │
// ┃ LAYER2┃Meta   ┃Alt    ┃ ␣           Space               ⍽ ┃AltGr┃Menu ┃Ctrl ┃  ←  │  ↓  │  →  │
// ┗━━━━━━━┻━━━━━━━┻━━━━━━━┹───────────────────────────────────┺━━━━━┻━━━━━┻━━━━━┻─────┴─────┴─────┘

//                                             LAYER2
//
// ┌─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┬─────┐
// │ esc │ F1  │ F2  │ F3  │ F4  │ F5  │ F6  │ F7  │ F8  │ F9  │ F10 │ F11 │ F12 │ PRSC│ DEL │ INS │
// │     │     │     │     │     │     │     │     │     │     │     │     │     │     │     │     │
// ┢─────┼─────┼─────┼─────┼─────┼─────┼─────┼─────┼─────┼─────┼─────┼─────┼─────╆━━━━━┷━━━━━╅─────┤
// ┃ ~ ∨ │ ! ' │ @ " │ # ˝ │ $ ¸ │ % ˇ │ ^ ^ │ & ˘ │ * ˙ │ ( ̣  │ ) ° │ _ ¯ │ + ˛ ┃  ⌫ Back   ┃     │
// ┃ ` ¬ │ 1 ¡ │ 2 © │ 3 • │ 4 § │ 5 € │ 6 ¢ │ 7 − │ 8 × │ 9 ÷ │ 0 ° │ - – │ = — ┃   space   ┃ PGUP│
// ┣━━━━━┷━┱───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┴─┬───┺━┳━━━━━━━━━╉─────┤
// ┃       ┃ Q Ą │ W Ę │MOUSE│MOUSE│ T ß │     │ U ↑ │ I ↔ │     │ P Þ │ { Ü │ } Ö ┃   |     ┃     │
// ┃Tab ↹  ┃ q ą │ w œ │ LEFT│RIGHT│ t ß │ COPY│ u ↓ │ i → │PASTE│ p þ │ [ ü │ ] ö ┃   \ ρ   ┃ PGDN│
// ┣━━━━━━━┻┱────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┬────┴┲━━━━┻━━━━━━━━━╉─────┤
// ┃        ┃ A Ä │ S ß │ D ś │ F Ž │ G Č │     │ CTRL│ CTRL│     │ : ˝ │ " ˇ ┃              ┃     │
// ┃Ctrl ⇬  ┃ a ä │ s ß │ d Ś │ f ž │ g č │ HOME│  ←  │  →  │ END │ ; ´ │ ' ^ ┃              ┃ HOME│
// ┣━━━━━━━━┻━━━━┱┴────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┬┴────┲┻━━━━━━━━┳━━━━━╃─────┤
// ┃             ┃ Z Ż │ X Ź │ C Ć │ V ‘ │ B “ │ N Ń │ M ∞ │ < × │ > ÷ │ |   ┃         ┃MOVE │     │
// ┃Shift ⇧      ┃ z ż │ x ź │ c ć │ v „ │ b ” │ n ń │ m µ │ , ≤ │ . ≥ │ \ ρ ┃Shift ⇧  ┃MOUS↑│ END │
// ┣━━━━━━━┳━━━━━┻━┳━━━┷━━━┱─┴─────┴─────┴─────┴─────┴─────┴───┲━┷━━━┳━┷━━━┳━┻━━━┳━━━━━╃─────┼─────┤
// ┃PRESSED┃       ┃       ┃ ␣                               ⍽ ┃⇮    ┃     ┃     ┃MOVE │MOVE │MOVE │
// ┃  NOW  ┃Meta   ┃Alt    ┃ ␣           Space               ⍽ ┃AltGr┃Menu ┃Ctrl ┃MOUS←│MOUS↓│MOUS→│
// ┗━━━━━━━┻━━━━━━━┻━━━━━━━┹───────────────────────────────────┺━━━━━┻━━━━━┻━━━━━┻─────┴─────┴─────┘

// * Moving mouse is only available using QMK firmware keyboard
// * To turn on caps lock it is right control + (previously caps) left control on keyd, on QMK it's fn
// * Function keys in top row might differ based on your keyboard and it's not really changeable

default partial alphanumeric_keys function_keys
xkb_symbols "basic" {

    // Visualisation and description: http://podziemie.net/xkb/pl
    // Contact: Michał Górny <zrchos+freedesktop@gmail.com>

    include "latin"


    name[Group1]="Polish";

    key <TLDE>	{ [     grave, asciitilde,      notsign,    logicalor ]	};
    key <AE01>	{ [         1,     exclam,     notequal,   exclamdown ]	};
    key <AE02>	{ [         2,         at,  twosuperior, questiondown ]	};
    key <AE04>	{ [         4,     dollar,         cent,   onequarter ]	};
    key <AE05>	{ [         5,    percent,     EuroSign,        U2030 ]	};
    key <AE06>	{ [         6, asciicircum,     onehalf,   logicaland ]	};
    key <AE07>	{ [         7,  ampersand,      section,        U2248 ]	};
    key <AE08>	{ [         8,   asterisk, periodcentered, threequarters ] };
    key <AE09>	{ [         9,  parenleft, guillemotleft,   plusminus ]	};
    key <AE10>	{ [         0, parenright, guillemotright,     degree ]	};
    key <AE11>	{ [     minus, underscore,       endash,       emdash ]	};

    key <AD01>	{ [         q,          Q,      aogonek,      Aogonek ]	};
    key <AD02>	{ [         w,          W,       scaron,       Scaron ]	};
    key <AD03>	{ [         e,          E,      eogonek,      Eogonek ]	};
    key <AD04>	{ [         r,          R,    copyright,   registered ]	};
    key <AD05>	{ [         t,          T,       Greek_pi,  Greek_OMEGA]};
    key <AD08>	{ [         i,          I,   rightarrow,        U2194 ]	};
    key <AD09>	{ [         o,          O,       oacute,        Oacute]	};

    key <AD11> {[  bracketleft,       braceleft,  udiaeresis,  Udiaeresis ]};
    key <AD12> {[  bracketright,      braceright, odiaeresis,     Odiaeresis ]};

    key <AC01>	{ [         a,          A,      adiaeresis, Adiaeresis]	};
    key <AC02>	{ [         s,          S,       ssharp,       ssharp ]	};
    key <AC03>	{ [         d,          D,      sacute,     Sacute    ] };
    key <AC04>	{ [         f,          F,      zcaron,        Zcaron ]	};
    key <AC05>	{ [         g,          G,      ccaron,        Ccaron ]	};
    key <AC06>	{ [         h,          H, rightsinglequotemark,U2022 ] };
    key <AC07>	{ [         j,          J,        schwa,        SCHWA ]	};
    key <AC08>	{ [         k,          K,     ellipsis,  dead_stroke ]	};

    key <AB01>	{ [         z,          Z,    zabovedot,    Zabovedot ]	};
    key <AB02>	{ [         x,          X,       zacute,       Zacute ]	};
    key <AB03>	{ [         c,          C,       cacute,       Cacute ]	};
    key <AB04>	{ [         v,          V, doublelowquotemark, leftsinglequotemark ] };
    key <AB05>	{ [         b,          B, rightdoublequotemark, leftdoublequotemark ] };
    key <AB06>	{ [         n,          N,       nacute,       Nacute ]	};
    key <AB07>	{ [         m,          M,           mu,     infinity ]	};
    key <AB08>	{ [     comma,       less, lessthanequal,    multiply ]	};
    key <AB09>	{ [    period,    greater, greaterthanequal, division ]	};

    key <SPCE>	{ [     space,      space,  U2423,           U2423    ] };
    key <BKSL>	{ [     backslash,      bar, Greek_rho, nobreakspace ]	};
    key <AB10>	{ [     slash,      question, bar, Greek_rho ]	};
    key  <TAB> { [       Tab,  ISO_Left_Tab, U2022,       U221E       ] };

    include "kpdl(comma)"

    include "level3(ralt_switch)"
};

